  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug radar server (ttyACM1)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/radar",
      "args": [
        "-port",
        "/dev/ttyACM1"
      ]
    },
    {
      "name": "debug radar server (disable radar)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/radar",
      "args": [
        "-disable-radar"
      ]
    }
  ]
}
