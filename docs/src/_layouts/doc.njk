---
layout: page.njk
---
<div class="max-w-4xl mx-auto">
    {# Breadcrumb navigation #}
    {% if section %}
    <nav class="text-sm text-gray-600 mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li>
                <a href="/" class="hover:text-blue-600">Home</a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li>
                <a href="/{{ section }}/" class="hover:text-blue-600 capitalize">{{ section }}</a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li class="text-gray-900 font-medium">{{ title }}</li>
        </ol>
    </nav>
    {% endif %}

    {# Main content with Tailwind Typography #}
    <article class="prose prose-lg max-w-none">
        {# Title and metadata #}
        <div class="not-prose mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-3">{{ title }}</h1>

            {% if description %}
            <p class="text-xl text-gray-600 mb-4">{{ description }}</p>
            {% endif %}

            {% if date or readingTime %}
            <div class="flex items-center space-x-4 text-sm text-gray-500">
                {% if date %}
                <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span>{{ date | dateDisplay }}</span>
                </div>
                {% endif %}

                {% if content %}
                <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>{{ content | readingTime }} min read</span>
                </div>
                {% endif %}
            </div>
            {% endif %}
        </div>

        {# Actual markdown content #}
        {{ content | safe }}
    </article>

    {# Navigation between docs #}
    {% if previousPage or nextPage %}
    <div class="flex justify-between items-center mt-12 pt-8 border-t border-gray-200">
        {% if previousPage %}
        <a href="{{ previousPage.url }}" class="flex items-center space-x-2 text-blue-600 hover:text-blue-800 group">
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <div>
                <div class="text-sm text-gray-600">Previous</div>
                <div class="font-semibold">{{ previousPage.data.title }}</div>
            </div>
        </a>
        {% else %}
        <div></div>
        {% endif %}

        {% if nextPage %}
        <a href="{{ nextPage.url }}" class="flex items-center space-x-2 text-blue-600 hover:text-blue-800 group text-right">
            <div>
                <div class="text-sm text-gray-600">Next</div>
                <div class="font-semibold">{{ nextPage.data.title }}</div>
            </div>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
        {% endif %}
    </div>
    {% endif %}

    {# Call to action for help #}
    <div class="mt-12 p-6 bg-blue-50 rounded-lg border border-blue-100">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Need Help?</h3>
        <p class="text-gray-600 mb-4">
            Found something unclear? Have questions or suggestions?
        </p>
        <div class="flex space-x-4">
            <a href="https://discord.gg/XXh6jXVFkt" class="inline-flex items-center space-x-2 text-blue-600 hover:text-blue-800 font-medium">
