{
  "swift.formatting.enable": true,
  "swift.formatting.formatOnSave": true,
  "swift.formatting.swiftFormatPath": "swift-format",
  "swift.formatting.swiftFormatArgs": [
    "--configuration",
    "${workspaceFolder}/tools/visualiser-macos/.swift-format"
  ],
  "[swift]": {
    "editor.defaultFormatter": "sswg.swift-lang",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "swift.buildPath": "${workspaceFolder}/tools/visualiser-macos/build/Build/Products/Release",
  "sourcekit-lsp.serverPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
  "sourcekit-lsp.toolchainPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain",
  "sourcekit-lsp.trace.server": "off"
}
